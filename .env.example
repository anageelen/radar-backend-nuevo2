# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@host:port/database_name

# External APIs (Required for full functionality)
GOOGLE_API_KEY=your_google_custom_search_api_key
GOOGLE_CX=your_google_custom_search_engine_id
BING_API_KEY=your_bing_search_v7_api_key
NEWSAPI_KEY=your_newsapi_org_api_key
OPENAI_API_KEY=your_openai_api_key

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Application Settings
SECRET_KEY=your_secret_key_for_jwt_signing
DEBUG=True
ENVIRONMENT=development

# CORS Settings (for frontend connection)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
